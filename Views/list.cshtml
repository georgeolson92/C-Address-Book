<!DOCTYPE html>
<html>
	<head>
		<link href="https://fonts.googleapis.com/css?family=Slabo+13px" rel="stylesheet"> 
		<link rel="stylesheet" type="text/css" href="../Content/css/bootstrap.min.css">
		<link rel="stylesheet" type="text/css" href="../Content/css/styles.css">
		<title>Address Book</title>
	</head>
	<body>
		<div class="container">
			<h1>Contact List</h1>

			@if (@Model.Count == 0)
			    {
			      <h3>No Contacts have been added yet!</h3>
			    } else 
			    {

			    @foreach (var contact in Model)
			    {
			        <div class="contact">
			        	<h3>@contact.GetName()</h3>
						<ul>
							<li><strong>Phone #: </strong>@contact.GetPhone()</li>
							<li><strong>Address: </strong>@contact.GetAddress()</li>
						</ul>
				    </div>
			    }
			    }




			<a href="/new"><button class="btn btn-primary">Add a Contact</button></a>
			<form action="/contacts_deleted" method="post">
				<button type="submit" class="btn btn-primary">Clear List</button>
			</form>
		</div>
	</body>
</html>