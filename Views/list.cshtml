

@if (@Model.Count == 0)
    {
      <h3>No Contacts have been added yet!</h3>
    } else 
    {

    @foreach (var contact in Model)
    {
        <div class="contact">
			<ul>
				<h3>@contact.GetName()</h3>
				<li>@contact.GetPhone()</li>
				<li>@contact.GetAddress()</li>
			</ul>
	    </div>
    }
    }




<a href="/new">Add a contact</a>
<a href="/clear">Clear address book</a>